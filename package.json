{
  "name": "saga-app",
  "type": "commonjs",
  "version": "1.0.0",
  "description": "",
  "node": ">=20.0.0",
  "private": true,
  "scripts": {
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/booking-app/main",
    "build": "nest build",
    "---------------------------------------------------------------------": "",
    "booking:migrate:create-only": "pnpm --filter booking-app migrate:create-only",
    "booking:migrate:run-migrations": "pnpm --filter booking-app migrate:run-migrations",
    "bookingr:migrate:rollback": "pnpm --filter booking-app migrate:rollback",
    "booking:migrate:rollback:all": "pnpm --filter booking-app migrate:rollback:all",
    "booking:migrate:seed": "pnpm --filter booking-app migrate:seed",
    "----------------------------------------------------------------------------------------------": "",
    "booking:dev": "nest start booking-app --watch",
    "booking:debug": "nest start booking-app --debug --watch",
    "booking:prod": "node dist/apps/booking-app/main",
    "booking:build": "nest build booking-app",
    "booking:typecheck": "pnpm --filter booking-app typecheck",
    "booking:typecheck:watch": "pnpm --filter booking-app typecheck:watch",
    "booking:lint:check": "pnpm --filter booking-app lint:check",
    "booking:lint:fix": "pnpm --filter booking-app lint:fix",
    "-------------------------------------------------------------------------------------------": "",
    "message-broker:dev": "nest start message-broker-app --watch",
    "message-broker:debug": "nest start message-broker-app --debug --watch",
    "message-broker:prod": "node dist/apps/message-broker-app/main",
    "message-broker:build": "nest build message-broker-app",
    "message-broker:typecheck": "pnpm --filter message-broker-app run typecheck",
    "message-broker:typecheck:watch": "pnpm --filter message-broker-app run typecheck:watch",
    "message-broker:lint:check": "pnpm --filter message-broker-app run lint:check",
    "message-broker:lint:fix": "pnpm --filter message-broker-app run lint:fix",
    "-----------------------------------------------------------------------------------------------": "",
    "payment:dev": "nest start payment-app --watch",
    "payment:debug": "nest start payment-app --debug --watch",
    "payment:prod": "node dist/apps/payment-app/main",
    "payment:build": "nest build payment-app",
    "payment:typecheck": "pnpm --filter payment-app run typecheck",
    "payment:typecheck:watch": "pnpm --filter payment-app run typecheck:watch",
    "payment:lint:check": "pnpm --filter payment-app run lint:check",
    "payment:lint:fix": "pnpm --filter payment-app run lint:fix",
    "---------------------------------------------------------------------------------": "",
    "docker:debug:run": "DOCKER_BUILDKIT=0 docker-compose -f docker-compose.debug.yml up --force-recreate",
    "docker:debug:stop": "docker-compose -f docker-compose.debug.yml down message-broker-app booking-app payment-app",
    "docker:dev:run": "DOCKER_BUILDKIT=0 docker-compose -f docker-compose.dev.yml up --force-recreate",
    "docker:dev:stop": "docker-compose -f docker-compose.dev.yml down message-broker-app booking-app payment-app",
    "docker:prod": "DOCKER_BUILDKIT=0 docker-compose -f docker-compose.prod.yml up --force-recreate",
    "----------------------------------------------------------------------------------": "",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"{src,apps,libs,test}/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "clean:dist": "rimraf apps/**/dist",
    "clean:node": "rimraf apps/**/node_modules",
    "------------------------------------------------------------------------------------": "",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/booking-app/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "amqplib": "^0.10.4",
    "cockatiel": "^3.1.3",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/amqplib": "^0.10.5",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.3.1",
    "@types/pg": "^8.11.6",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "dependency-cruiser": "*",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.7",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@libs/common(|/.*)$": "<rootDir>/libs/common/src/$1"
    }
  }
}
