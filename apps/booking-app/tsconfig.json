{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@booking-domain/*": [
        "src/modules/booking/domain/*"
      ],
      "@booking-application/*": [
        "src/modules/booking/application/*"
      ],
      "@booking-controller/*": [
        "src/modules/booking/controller/*"
      ],
      "@booking-infra/*": [
        "src/modules/booking/infra/*"
      ],
      //
      "@reserve-booking-saga-domain/*": [
        "src/modules/reserve-booking-saga/domain/*"
      ],
      "@reserve-booking-saga-application/*": [
        "src/modules/reserve-booking-saga/application/*"
      ],
      "@reserve-booking-saga-infra/*": [
        "src/modules/reserve-booking-saga/infra/*"
      ],
      //
      "@shared/*": [
        "src/shared/*"
      ],
      "@libs/*": [
        "../../libs/*"
      ]
    },
  },
  "include": ["src/**/*", "../../libs/**/*"],
}
