{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/booking-app/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/booking-app/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/booking-app",
  "projects": {
    "booking-app": {
      "type": "application",
      "root": "apps/booking-app",
      "entryFile": "main",
      "sourceRoot": "apps/booking-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/booking-app/tsconfig.app.json"
      }
    },
    "payment-app": {
      "type": "application",
      "root": "apps/payment-app",
      "entryFile": "main",
      "sourceRoot": "apps/payment-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/payment-app/tsconfig.app.json"
      }
    },
    "message-broker-app": {
      "type": "application",
      "root": "apps/message-broker-app",
      "entryFile": "main",
      "sourceRoot": "apps/message-broker-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/message-broker-app/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}